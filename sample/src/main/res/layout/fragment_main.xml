<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <me.xiaopan.android.widget.PagerSlidingTabStrip
        android:id="@+id/tabStrip_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:allowWidthFull="true"
        app:slidingBlock="@drawable/image_sliding_block">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/text_slidingTabTitle"
                android:text="详情"/>
            <TextView
                style="@style/text_slidingTabTitle"
                android:text="评论"/>
            <TextView
                style="@style/text_slidingTabTitle"
                android:text="攻略"/>
        </LinearLayout>
    </me.xiaopan.android.widget.PagerSlidingTabStrip>

    <me.xiaopan.vpc.ViewPagerCompat
        android:id="@+id/viewPager_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
